extends layout

block content
        p
        .container(action='/reservations')
            .row
                each element in items

                    .col-lg-3.col-md-4.col-sm-6.mb-3
                     .card(style='width: 200px')
                      
                        .card-body
                            a(href="/reservations/checkout?id=" + element._id).h5.card-title  #{element.CustomerName}
                            li.card-text  #{element.ReservationPrice} euro
                            li.card-text.text-muted #{moment(element.ReservationDate).format('MMM Do YYYY')}
                            
                            











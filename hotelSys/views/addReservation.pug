extends layout

block content
    .container
        form(method="POST" action="/reservations/addReservation")
            div.form-group
                label(for="CustomerName") Artist Name:
                input#CustomerName.form-control(type="text", name="CustomerName")
            div.form-group
                label(for="reservationPrice") Price:
                input#ReservationPrice.form-control(type="number", name="reservationPrice")
            button.btn.btn-primary(type="submit") Submit